@using Umbraco3.FormModels
@model QuestionFormModel


@using (Html.BeginUmbracoForm("QuestionForm", "FormSurface", FormMethod.Post, new { novalidate = "novalidate" }))
{
    <div class="form-group">
        <label class="form-input" asp-for="Name"></label>
        <input class="form-input" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="form-input" asp-for="Email"></label>
        <input class="form-input" asp-for="Email" />
        <span asp-validation-for="Email"></span>

    </div>
    <div class="form-group">
        <label class="form-input" asp-for="Message"></label>
        <textarea class="form-input" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>

    </div>
    <div class="form-group">
        <button class="btn-submit" type="submit">Submit</button>
    </div>
}
